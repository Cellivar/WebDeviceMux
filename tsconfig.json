{
  "compilerOptions": {
    "types": [
      "vitest/importMeta",
      "@types/w3c-web-usb"
    ],
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": false,
    "strict": true,
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src"
  ]
}
